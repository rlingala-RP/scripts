pipeline{
    agent { dockerfile true    }
    stages{
        stage('checkout') {
            steps {
                git credentialsId: 'jenkins', url: 'git@github.com:rlingala-RP/Gowebapi.git'
            }
        }
        stage('Sonarqube scan on Gowebapi') {
            steps {
                sh 'sonar-scanner -D"sonar.projectKey=psa" -D"sonar.sources=." -D"sonar.host.url=http://localhost:9000" -D"sonar.login=b2528adf6371b496fced39a8fe8a2ebf0d2b140a"'
            }
        }
    }
}
